<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginTop="40dp">

    <TextView
        android:id="@+id/txt_tox"
        android:layout_width="119dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fromx"
        android:layout_width="114dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="124dp"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="113dp"
        app:srcCompat="@drawable/forward_50px" />

    <TextView
        android:id="@+id/txt_namex"
        android:layout_width="132dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_datex"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_fromx"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
         />

    <TextView
        android:id="@+id/txt_timex"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txt_datex"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt_pricex"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/txt_fromx"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!--
        <TextView
            android:id="@+id/txt_phonex"
            android:layout_width="114dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txt_pricex"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>
    -->
    <ImageView
        android:id="@+id/opt1x"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/opt2x"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="54dp" />

    <ImageView
        android:id="@+id/opt3x"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_fromx"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/call_50px" />

</RelativeLayout>